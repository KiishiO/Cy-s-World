<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Update for Event:"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_title_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/cardinal_red"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Message:"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/event_update_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_edit_text"
        android:gravity="top"
        android:hint="Type your update message here..."
        android:inputType="textMultiLine"
        android:minLines="4"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="This update will be sent to all users who have RSVPed to this event."
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

</LinearLayout>