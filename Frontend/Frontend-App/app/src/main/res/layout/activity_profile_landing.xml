<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardinal_red"
    android:id="@+id/profileBack">

<!--Header Graphics-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/profile_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>

<!-- Who Are You?-->
    <TextView
        android:id="@+id/tv_WhoAreYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Who are you?"
        android:textStyle="bold"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/gold"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="150sp">
    </TextView>

<!-- Student Profile Card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/studentCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/gold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_WhoAreYou">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/student_icon">
        </ImageView>

    </com.google.android.material.card.MaterialCardView>

<!--"I am a student" Text Link-->
    <TextView
        android:id="@+id/tv_I"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/studentCard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_WhoAreYou"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:text="            I"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/gold">
    </TextView>

    <TextView
        android:id="@+id/tv_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/studentCard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_I"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:text="     am a"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/gold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/studentCard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_am"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:text="student"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/gold">
    </TextView>

<!--Teacher Profile Card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/teacherCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/gold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentCard">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/teacher_icon"
            android:layout_gravity="center">
        </ImageView>

    </com.google.android.material.card.MaterialCardView>

<!-- "I am teacher" text link-->
    <TextView
        android:id="@+id/teacher_I"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/teacherCard"
        app:layout_constraintTop_toBottomOf="@+id/studentCard"
        android:layout_marginTop="90dp"
        android:layout_marginRight="120dp"
        android:text="I"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/gold">
    </TextView>

    <TextView
        android:id="@+id/teacher_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/teacherCard"
        app:layout_constraintTop_toBottomOf="@+id/teacher_I"
        android:layout_marginRight="75dp"
        android:text="am a"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/gold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/teacherCard"
        app:layout_constraintTop_toBottomOf="@+id/teacher_am"
        android:layout_marginRight="30dp"
        android:text="teacher"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/gold">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>