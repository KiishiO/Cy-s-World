<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">

    <!-- Title Section -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WebSocket Chat App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#3F51B5"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/titleDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to chat rooms using WebSockets"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Server 1 Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E8EAF6"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat Room 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server 1 URL:"
            android:textSize="16sp"
            android:textColor="#3F51B5"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/serverEdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ws://10.0.2.2:8080/chat/1/"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="16sp"
            android:textColor="#3F51B5"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/unameEdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter username"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/connectBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to Chat Room 1"
            android:backgroundTint="#3F51B5"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Chat Room 1"
            android:backgroundTint="#7986CB"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Server 2 Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0F2F1"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat Room 2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server 2 URL:"
            android:textSize="16sp"
            android:textColor="#009688"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/serverEdt2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ws://10.0.2.2:8080/chat/2/"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="16sp"
            android:textColor="#009688"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/unameEdt2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter username"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/connectBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to Chat Room 2"
            android:backgroundTint="#009688"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/backBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Chat Room 2"
            android:backgroundTint="#4DB6AC"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>