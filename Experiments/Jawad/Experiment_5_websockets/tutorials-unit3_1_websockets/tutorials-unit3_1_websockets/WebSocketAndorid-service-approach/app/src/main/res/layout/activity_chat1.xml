<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChatActivity1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:id="@+id/chatHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat Room 1"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Chat Display Area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E8EAF6"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tx1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Conversation will appear here:"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="#303F9F"
            android:gravity="start" />
    </ScrollView>

    <!-- Quick Reply Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnHello"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="👋 Hello"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#C5CAE9" />

        <Button
            android:id="@+id/btnThanks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🙏 Thanks"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#C5CAE9" />

        <Button
            android:id="@+id/btnBye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="👋 Bye"
            android:textSize="14sp"
            android:backgroundTint="#C5CAE9" />
    </LinearLayout>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <EditText
            android:id="@+id/msgEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a message..."
            android:textSize="16sp"
            android:padding="12dp"
            android:minHeight="50dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/emojiBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="😊"
            android:textSize="20sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#7986CB" />

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Send"
            android:padding="12dp"
            android:backgroundTint="#3F51B5" />
    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/backMainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Main"
        android:backgroundTint="#7986CB" />

</LinearLayout>